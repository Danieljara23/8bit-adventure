---
import Layout from "../layouts/Layout.astro";
import ReactCodeEditor from "../components/ReactCodeEditor"

// const correctAnswer = `display:flex;flex-direction:column;`

const correctAnswer = `display:grid;grid-template-columns:repeat(6,1fr);grid-template-rows:repeat(5,1fr);`
const initialValue = 'display: flex;\ngrid-template-columns: repeat(1, 1fr);\nflex-direction: column;'
// const handleChange = () => document?.getElementById('#card-c').setAttribute('style', window?.responseStyles)
---

<Layout title="Step 2">
    <main>
      <!-- <textarea id=”editor”></textarea> -->
      <div class="container">
          <h1>Paso 2</h1>
          <ReactCodeEditor
            initialValue={initialValue}
            language="CSS"
            placeholder="Tu código CSS aquí"
            correctAnswer={correctAnswer}
            elementToStyle="card-c"
            client:only="react"
          />
          <div class="wrapper">
            <div class="cards-container" id="card-c">
              {
                Array.from(Array(29).keys()).map((element)=> {
                  return (
                  <div class="card-item">
                    <img src={`./src/assets/step2/${element + 1}.png`}/>   
                  </div>)
                })
              }
            </div>
          </div>
          
        </div>
    </main>
</Layout>
<script>

</script>
<style>
    main {
        height: 100vh;
    }
    h1 {
        font-size: 60px;
        color: white;
        text-align: center;
        background-image: linear-gradient(
            -225deg,
            #231557 0%,
            #44107a 29%,
            #ff1361 67%,
            #fff800 100%
        );
        background-size: auto auto;
        background-clip: border-box;
        background-size: 200% auto;
        color: #fff;
        background-clip: text;
        text-fill-color: transparent;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: textclip 3s linear infinite;
        display: inline-block;
        font-size: 45px;
    }
    p {
        color: white;
    }

    .container{
      display: flex;
      flex-direction: column;
    }

    .wrapper {
      margin-top: 20px;

    }
